// translation rules FROM Esperanto
// This file is UTF-8 encoded

.L01 B b V v D d Δ δ W w J j Z z G g Y y N n L l P p F f T t Θ θ Q q C c S s K k H h M m R r A a E e O o I i U u

.replace
   w          δ
   q          θ
//   o          o-

.group
   # Default transliteration rules
   a    a
   e    e
   o    o
   i    i
   u    u
   w    δ
   q    θ
.end

.group a
    _) a (_       a
       a          a
       //a (Ja      a||

.group e
    _) e (_       e
       e          e

.group o
    _) o (_       o
       o          o
       //o (Jo      o_;_  //any 'o' for words ending in -o, separated
                        //_;_  clause pause

.group i
    _) i (_       i
       i          i
       //i (Ji      i||

.group u
    _) u (_       u
       u          u


