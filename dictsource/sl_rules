
// Spelling-to-phoneme rules for Slovenian
// This file is UTF-8 encoded

.L01 b d g j l m n v z ž   // voiced consonants


.group a
        a        a

.group b
        b        b

.group c
        c        ts

.group č
        č        tS

.group ć
        ć        tS;
        
.group d
        d        d
        dz       dz
        dž       dZ


.group e
        e        e
        e (_     E      // ??
        e (C_    E
        e (l_    e
     _) e        E


.group f
        f        f


.group g
        g        g


.group h
        h        x
     i) h        h
        h (F     h   // before voiceless consonant


.group i
        i        i
        i (A     j


.group j
        j        j


.group k
        k        k


.group l
        l        l
        l (K     w
     K) l (K     @l
     K) l (rK    l
     K) l (_     u
     @) l (_     =w
        lj       l^
        lj (A    lj
        lj (i    l^


.group m
        m        m
        m (g     N
        m (k     N
     K) m (K     m@-  // unstressed


.group n
        n        n
        n (g     N
        n (k     N

     K) n (K     n@-  // unstressed
        nj       n^
        nj (A    nj
        nj (i    n^


.group o
        o        o
     _) o        O
     _) o (l     o
     _) o (v     o


.group p
        p        p


.group q
        q        k
        qu       kv


.group r
        r        R
        rr       R
     A) r (A     *

     K) r (K     @R


.group s
        s        s


.group š
        š        S


.group t
        t        t
   Krs) t (_     _|t


.group u
        u        u
        u (A     w
     A) u (K     w


.group v
        v        v
        v (-A+   v    // preposition 'v' before a vowel
     A) v (K     w
     K) v (K     %u
     K) v (r     v
   L01) v (A     v#


.group w
        w        w


.group x
        x        ks


.group y
        y        j
     K) y (K     i


.group z
        z        z


.group ž
        ž        Z


.group
	á	'a:
	é	'e:
	ê	'E:
	è	E
	í	'i:
	ó	'o:
	ô	'O:
	ò	O
	ú	'u:
        đ        dZ
        ř        R^
        ä        E
        ö        @:
        ü        y
        ß        _^_DE

        $        d'olaR

