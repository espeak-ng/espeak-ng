phoneme δ
  vcd dnt frc
  ipa ð
  lengthmod 6
  Vowelout f1=0  f2=1700 -300 300  f3=-100 60  len=50
  FMT(voc/dh)
endphoneme

phoneme j
  import_phoneme consonants/dz
endphoneme

phoneme jj
  vcd alp sib afr
  ipa dʑ
  lengthmod 5
  Vowelin f1=2  f2=2700 400 600  f3=300 80 rate len=70
  Vowelout f1=2 f2=2700 400 600  f3=300 80
  FMT(dzh/xdzh) addWav(x/dz_pzd)
endphoneme

phoneme z
  import_phoneme base1/z
